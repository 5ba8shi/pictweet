<%= render partial: "tweets/header" %>
<div class="contents row">
  <div class="container">
    <h2>ログイン</h2>

    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.label :パスワードを記憶させる %><br />
          <%= f.check_box :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "ログインする" %>
      </div>
    <% end %>

    <ul class = "sns">
      <li><%= link_to "Facebookでログインする", user_facebook_omniauth_authorize_path, method: :post, class: "sns_register_f" %></li>
      <li><%= link_to "Googleでログインする", user_google_oauth2_omniauth_authorize_path, method: :post, class: "sns_register_g" %></li>
    </ul>
  </div>
</div>